<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_layout_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F7F7"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="-101dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="59dp"
                android:paddingBottom="20dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="165dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/m_logo_naver" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="19dp"
                    android:layout_marginBottom="8dp"
                    android:letterSpacing="0.06"
                    android:text="@string/naver_id"
                    android:textColor="#000000" />

                <LinearLayout
                    android:id="@+id/layout_id"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:background="@drawable/input_textline_blur"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="14dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <EditText
                        android:id="@+id/editText_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/inner_input_textline"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:maxLength="20"
                        android:paddingRight="25dp" />

                    <TextView
                        android:id="@+id/textView_id_mail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/naver_id_mail"
                        android:textSize="15sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="-2dp"
                    android:text="@string/alert"
                    android:textColor="#FF0000" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="19dp"
                    android:layout_marginBottom="8dp"
                    android:letterSpacing="0.06"
                    android:text="@string/naver_password"
                    android:textColor="#000000" />

                <LinearLayout
                    android:id="@+id/layout_password"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:background="@drawable/input_textline_blur"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="14dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <EditText
                        android:id="@+id/editText_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:background="@drawable/inner_input_textline"
                        android:ems="10"
                        android:inputType="textPassword"
                        android:maxLength="20"
                        android:paddingRight="25dp"
                        android:text="@string/blank" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/img" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="-2dp"
                    android:text="@string/alert"
                    android:textColor="#FF0000" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="19dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="4"
                    android:letterSpacing="0.06"
                    android:text="@string/naver_password_check"
                    android:textColor="#000000" />

                <LinearLayout
                    android:id="@+id/layout_password_check"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:background="@drawable/input_textline_blur"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="14dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <EditText
                        android:id="@+id/editText_password_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:background="@drawable/inner_input_textline"
                        android:ems="10"
                        android:inputType="textPassword"
                        android:maxLength="20"
                        android:paddingRight="25dp"
                        android:text="@string/blank" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/img_1" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="-2dp"
                    android:text="@string/alert"
                    android:textColor="#FF0000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="19dp"
                    android:layout_marginBottom="8dp"
                    android:letterSpacing="0.06"
                    android:text="@string/name"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/editText_name"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:background="@drawable/input_textline_blur"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:maxLength="40"
                    android:paddingLeft="14dp"
                    android:paddingTop="10dp"
                    android:paddingRight="14dp"
                    android:paddingBottom="10dp"
                    android:text="@string/blank" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="-2dp"
                    android:text="@string/alert"
                    android:textColor="#FF0000" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="19dp"
                    android:layout_marginBottom="8dp"
                    android:letterSpacing="0.06"
                    android:text="@string/birthday"
                    android:textColor="#000000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editText_year"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="122"
                        android:background="@drawable/input_textline_blur"
                        android:ems="10"
                        android:hint="년(4자)"
                        android:inputType="textPersonName"
                        android:maxLength="4"
                        android:paddingLeft="14dp"
                        android:paddingTop="11dp"
                        android:paddingRight="39dp"
                        android:paddingBottom="11dp"
                        android:text="@string/blank"
                        android:textSize="15sp" />

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="115"
                        android:background="@drawable/spinner_drawable"
                        android:paddingLeft="14dp"
                        android:paddingTop="11dp"
                        android:paddingRight="14dp"
                        android:paddingBottom="11dp" />

                    <EditText
                        android:id="@+id/editText_date"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="122"
                        android:background="@drawable/input_textline_blur"
                        android:ems="10"
                        android:hint="일"
                        android:inputType="textPersonName"
                        android:maxLength="2"
                        android:paddingLeft="14dp"
                        android:paddingTop="11dp"
                        android:paddingRight="39dp"
                        android:paddingBottom="11dp"
                        android:text="@string/blank"
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="-2dp"
                    android:text="@string/alert"
                    android:textColor="#FF0000" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="19dp"
                    android:layout_marginBottom="8dp"
                    android:letterSpacing="0.06"
                    android:text="@string/gender"
                    android:textColor="#000000" />

                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:background="@drawable/spinner_drawable"
                    android:paddingLeft="14dp"
                    android:paddingTop="10dp"
                    android:paddingRight="7dp"
                    android:paddingBottom="10dp" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="-2dp"
                    android:text="@string/alert"
                    android:textColor="#FF0000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.06"
                        android:text="@string/email"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/textView39"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="(선택)" />
                </LinearLayout>

                <EditText
                    android:id="@+id/editText_email"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:background="@drawable/input_textline_blur"
                    android:ems="10"
                    android:hint="선택입력"
                    android:inputType="textPersonName"
                    android:maxLength="100"
                    android:paddingLeft="14dp"
                    android:paddingTop="10dp"
                    android:paddingRight="39dp"
                    android:paddingBottom="10dp"
                    android:text="@string/blank"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textView31"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="-2dp"
                    android:text="@string/alert"
                    android:textColor="#FF0000"
                    android:visibility="gone" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:layout_marginBottom="8dp"
                android:letterSpacing="0.06"
                android:text="@string/phone"
                android:textColor="#000000" />

            <Spinner
                android:id="@+id/spinner3"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:background="@drawable/spinner_drawable"
                android:paddingLeft="14dp"
                android:paddingTop="10dp"
                android:paddingRight="7dp"
                android:paddingBottom="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editText_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/input_textline_blur"
                    android:ems="10"
                    android:hint="전화번호 입력"
                    android:inputType="textPersonName"
                    android:maxLength="16"
                    android:paddingLeft="14dp"
                    android:paddingTop="10dp"
                    android:paddingRight="39dp"
                    android:paddingBottom="10dp"
                    android:text="@string/blank"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/rect_button"
                    android:fontFamily="@font/mg"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:text="@string/access_number"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:cornerRadius="@null" />
            </LinearLayout>

            <EditText
                android:id="@+id/editText_access_code"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_accessline"
                android:ems="10"
                android:hint="인증번호 입력하세요"
                android:inputType="textPersonName"
                android:maxLength="8"
                android:paddingLeft="14dp"
                android:paddingTop="10dp"
                android:paddingRight="39dp"
                android:paddingBottom="10dp"
                android:text="@string/blank"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="-2dp"
                android:text="@string/alert"
                android:textColor="#FF0000" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/rect_button"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="@string/register"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="30dp"
                android:paddingBottom="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="9dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="이용약관"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textView32"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/bar"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textView33"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="개인정보처리방침"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView34"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/bar"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textView35"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="책임의 한계와 법적고지"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textView36"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/bar"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textView37"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="회원정보 고객센터"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView38"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="1dp"
                        android:text="©"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textView40"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="NAVER Corp."
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>